{
    "name": "@dynamail/mailbuilder",
    "version": "1.0.0",
    "main": "./dist/index.js",
    "types": "./src/index.ts",
    "author": {
        "name": "Adam Bergman",
        "email": "adam@fransvilhelm.com"
    },
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">=14"
    },
    "bin": {
        "mailbuilder": "./cli.js"
    },
    "files": [
        "dist",
        "templates",
        "cli.js"
    ],
    "scripts": {
        "start": "tsc --watch",
        "start:tooling": "nodemon --watch ../HandlebarsHelpers/dist/index.js --delay 2 --exec npm run start",
        "build": "tsc --incremental",
        "lint": "eslint src --ext .ts --ext .tsx --ext .js --ignore-pattern dist --ignore-pattern node_modules",
        "test": "jest",
        "type-check": "yarn tsc --noEmit",
        "release": "yarn build && yarn changeset publish"
    },
    "dependencies": {
        "@dynamail/handlebarshelpers": "*",
        "axios": "^0.21.1",
        "browser-sync": "^2.26.13",
        "chalk": "^4.1.0",
        "dotenv": "^8.2.0",
        "esm": "^3.2.25",
        "figures": "^3.2.0",
        "fs-extra": "^10.0.0",
        "handlebars": "^4.7.6",
        "inquirer": "^8.0.0",
        "lodash": "^4.17.20",
        "nanoid": "^3.1.22",
        "nodemon": "^2.0.12",
        "ora": "^5.2.0",
        "pretty-bytes": "^5.5.0",
        "read-pkg-up": "^7.0.1",
        "url-pattern": "^1.0.3",
        "yargs": "^16.2.0",
        "zod": "^1.11.11"
    },
    "devDependencies": {
        "@changesets/cli": "^2.12.0",
        "@fransvilhelm/changeset-changelog": "^1.0.0",
        "@types/browser-sync": "^2.26.1",
        "@types/dotenv": "^8.2.0",
        "@types/eslint": "^7.2.6",
        "@types/inquirer": "^7.3.1",
        "@types/jest": "^26.0.20",
        "@types/lodash": "^4.14.167",
        "@types/mjml": "^4.7.0",
        "@types/mjml-core": "^4.7.0",
        "@types/node": "^14.14.20",
        "@types/prettier": "^2.1.6",
        "@types/react": "^17.0.0",
        "@types/yargs": "^15.0.12",
        "@typescript-eslint/eslint-plugin": "^4.13.0",
        "@typescript-eslint/parser": "^4.13.0",
        "babel-eslint": "^10.1.0",
        "concurrently": "^5.3.0",
        "eslint": "^7.17.0",
        "eslint-config-react-app": "^6.0.0",
        "eslint-plugin-flowtype": "^5.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-testing-library": "^3.10.1",
        "husky": "^4.3.8",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.3",
        "mjml": "^4.9.0",
        "mjml-core": "^4.9.0",
        "mjml-parser-xml": "^4.9.0",
        "mjml-validator": "^4.9.0",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3"
    },
    "peerDependencies": {
        "eslint": ">=6",
        "mjml": ">=4",
        "mjml-core": ">=4",
        "mjml-parser-xml": ">=4",
        "mjml-validator": ">=4",
        "prettier": ">=1"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx}": [
            "eslint --fix"
        ],
        "*.{js,ts,jsx,tsx,json,md,yml,html}": [
            "prettier --write"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "proseWrap": "always"
    }
}